{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "amount": {
      "$ref": "../common/amount.json"
    },
    "id": {
      "$ref": "../common/uuid.json"
    },
    "campaign_id": {
      "$ref": "../common/uuid.json"
    },
    "completed_at": {
      "$ref": "../common/timestamp.json"
    },
    "created_at": {
      "$ref": "../common/timestamp.json"
    },
    "donor_comment": {
      "type": "string"
    },
    "donor_name": {
      "type": "string"
    },
    "fundraising_event_id": {
      "$ref": "../common/uuid-nullable.json"
    },
    "legacy_id": {
      "type": "integer"
    },
    "poll_id": {
      "$ref": "../common/uuid-nullable.json"
    },
    "poll_option_id": {
      "$ref": "../common/uuid-nullable.json"
    },
    "reward_claims": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "../common/uuid.json"
          },
          "quantity": {
            "type": "integer"
          },
          "reward_id": {
            "$ref": "../common/uuid.json"
          }
        }
      }
    },
    "reward_id": {
      "$ref": "../common/uuid-nullable.json"
    },
    "sustained": {
      "type": "boolean"
    },
    "target_id": {
      "$ref": "../common/uuid-nullable.json"
    },
    "team_event_id": {
      "$ref": "../common/uuid-nullable.json"
    },
    "shown": {
      "type": "boolean"
    },
    "read": {
      "type": "boolean"
    },
    "timeToApprove": {
      "type": "integer"
    },
    "displayAmount": {
      "$ref": "../common/amount.json"
    },
    "modStatus": {
      "description": "true = approved, false = censored or null = undecided",
      "type": [
        "boolean",
        "null"
      ]
    }
  },
  "required": [
    "amount",
    "campaign_id",
    "completed_at",
    "donor_comment",
    "donor_name",
    "id",
    "read",
    "shown",
    "modStatus"
  ]
}